<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/CSS/admin/userview.css" />
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

</head>

<body>
  <%- include('../includes/navigation.ejs') %>
  <main>
    

   
 <div class="bg-gray-100 dark:bg-gray-800 py-8">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row -mx-4">
          <div class="md:flex-1 px-4">
          <center>  <h1 class="heading__title"><%= user.title %> Profile </h1>
              <div class="h-[460px] rounded-lg bg-gray-300 dark:bg-gray-700 mb-4">
                  <img class="w-full h-full object-cover" src="<%= user.imageURL %>" alt="<%= user.title %>" />
          </center>
              </div>
             
          </div>
          <div class="md:flex-1 px-2">
              <h2 class="text-4xl font-bold text-gray-800 dark:text-white mb-1">Name:- <%= user.title %></h2>
              <br>
              <h4 class="text-4xl font-bold text-gray-800 dark:text-white mb-1">Designation:- <%= user.desc %></h4>

              <div>
                <span class="font-bold text-gray-700 dark:text-gray-300"> Skills: </span>
                <p class="text-gray-600 dark:text-gray-300 text-2xl mt-2">
                <span class="special-text"> <%= user.skills %> </span>
              </p>
            </div>

              <div class="flex mb-4">
                <div class="mr-4">
                    <span class="font-bold text-gray-700 dark:text-gray-300">State:</span>
                    <span class="text-gray-600 dark:text-gray-300"><%= user.state %></span>
                </div>
                <div>
                    <span class="font-bold text-gray-700 dark:text-gray-300">City:</span>
                    <span class="text-gray-600 dark:text-gray-300"><%= user.city %></span>
                </div>
             </div>


              <p class="text-gray-600 dark:text-gray-300 text-sm mb-4">
              Address : <span class="text-gray-600 dark:text-gray-300"> <%= user.addrss %> </span>
              </p>
              <div class="flex mb-4">
                  <div class="mr-4">
                      <span class="font-bold text-gray-700 dark:text-gray-300">Gender:</span>
                      <span class="text-gray-600 dark:text-gray-300"><%= user.gender %></span>
                  </div>
                  <div>
                      <span class="font-bold text-gray-700 dark:text-gray-300">Type:</span>
                      <span class="text-gray-600 dark:text-gray-300"><%= user.usrtype %></span>
                  </div>
                  <div>
                    <span class="font-bold text-gray-700 dark:text-gray-300">Account Type:</span>
                    <span class="text-gray-600 dark:text-gray-300"><%= user.actype %></span>
                </div>
              </div>
              <center>
                <form action="/admin/viewuser/<%= user.id %>" method="POST">
                  <input type="hidden" name="userId" value="<%= user.id %>">
                  <button type="submit" class="w-6 h-8 rounded-full bg-yellow-500 dark:bg-yellow-700 mr-2" title="Short-List">
                     Add To Short-List    
                  </button>
               </form>
            </div>
            </center>
            
          </div>
      </div>
  </div>
</div>



  </main>
  <%- include('../includes/end.ejs') %>
</body>
</html>