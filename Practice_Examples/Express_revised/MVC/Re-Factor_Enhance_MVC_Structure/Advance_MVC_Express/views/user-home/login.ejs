<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/CSS/login.css" />
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body>
  <%- include('../includes/newfrontnavigation.ejs') %>

  <main>
    <div class="background-container  min-h-screen flex flex-col justify-center items-center">
    <div class="bg-white rounded-lg shadow-lg p-8 max-w-md">
        <h1 class="text-4xl font-bold text-center text-purple-700 mb-8">Welcome to Login Page</h1>
        <form class="space-y-6">
            <div>
                <label class="block text-gray-700 font-bold mb-2" for="email">
                    Email
                </label>
                <input class="w-full px-4 py-2 rounded-lg border border-gray-400" id="email" name="email"
                    type="email">
            </div>
            <div>
                <label class="block text-gray-700 font-bold mb-2" for="password">
                    Password
                </label>
                <input class="w-full px-4 py-2 rounded-lg border border-gray-400" id="password" name="password"
                    type="password">
            </div>
            <div>
                <button class="w-full bg-purple-700 hover:bg-purple-900 text-white font-bold py-2 px-4 rounded-lg">
                    Log In
                </button>
            </div>
        </form>
        <div class="mt-4 text-center">
          <span class="text-base text-gray-500 dark:text-gray-300">User haven't any account? </span>
          <a href="/register" class="text-blue-500 hover:text-blue-600">Register</a>
        </div>
    </div>
</div>
  </main>

  <%- include('../includes/end.ejs') %>
</body>
